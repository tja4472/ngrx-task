{
  "name": "ng-task",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tja4472/ngrx-task"
  },
  "scripts": {
    "--- webserver ---": "",
    "webserver": "npx http-server -p 8070 -c-1 dist/ng-task",
    "--- emulator ---": "",
    "emulator-demo-1": "firebase emulators:start --only firestore,auth --project demo-1",
    "emulator-exec-test": "firebase emulators:exec --only firestore,auth --project demo-1 'npm test -- --forceExit'",
    "emulator-export": "firebase emulators:export emulator-data  --project demo-1",
    "emulator-import": "firebase emulators:start --only firestore,auth --project demo-1 --import emulator-data",
    "--- cypress ---": "",
    "cypress:open:component": "cypress open --component",
    "cypress:open:e2e": "cypress open --e2e",
    "cypress:run:component": "cypress run --component --config video=false",
    "cypress:run:e2e": "cypress run --e2e --config video=false",
    "--- ---": "",
    "ng": "ng",
    "start": "ng serve",
    "start:development": "ng serve --configuration=development",
    "start:emulator-demo": "ng serve --configuration=emulator-demo",
    "start:production": "ng serve --configuration=production",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "deploy": "ng deploy --base-href /ngrx-task/",
    "--- firebase deploy ---": "",
    "deploy:prod": "npm run build:prod && firebase deploy --only hosting:main",
    "deploy:dev": "ng build && firebase deploy --only hosting:other",
    "deploy:preview:main": "npm run build:prod && firebase hosting:channel:deploy preview --only main",
    "test": "jest",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write ."
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "19.1.7",
    "@angular/cdk": "19.1.5",
    "@angular/common": "19.1.7",
    "@angular/compiler": "19.1.7",
    "@angular/core": "19.1.7",
    "@angular/forms": "19.1.7",
    "@angular/material": "19.1.5",
    "@angular/platform-browser": "19.1.7",
    "@angular/platform-browser-dynamic": "19.1.7",
    "@angular/router": "19.1.7",
    "@angular/service-worker": "19.1.7",
    "@ngrx/effects": "19.0.1",
    "@ngrx/entity": "19.0.1",
    "@ngrx/operators": "19.0.1",
    "@ngrx/router-store": "19.0.1",
    "@ngrx/signals":"19.0.1",    
    "@ngrx/store": "19.0.1",
    "@ngrx/store-devtools": "19.0.1",
    "core-js": "3.40.0",
    "date-fns": "4.1.0",
    "firebase": "11.3.1",
    "ngxtension": "4.3.2",
    "node-fetch": "2.7.0",
    "rxfire": "6.1.0",
    "rxjs": "7.8.2",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "19.1.0",
    "@angular-eslint/eslint-plugin": "19.1.0",
    "@angular-eslint/eslint-plugin-template": "19.1.0",
    "@angular-eslint/schematics": "19.1.0",
    "@angular-eslint/template-parser": "19.1.0",
    "@angular/build": "19.1.8",
    "@angular/cli": "19.1.8",
    "@angular/compiler-cli": "19.1.7",
    "@angular-devkit/build-angular": "19.1.8",
    "@angular/language-service": "19.1.7",
    "@ngrx/eslint-plugin": "19.0.1",
    "@ngrx/schematics": "19.0.1",
    "@testing-library/angular": "17.3.6",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.5",
    "@types/node-fetch": "2.6.12",
    "@typescript-eslint/eslint-plugin": "8.25.0",
    "@typescript-eslint/parser": "8.25.0",
    "angular-cli-ghpages": "2.0.3",
    "cross-env": "7.0.3",
    "cypress": "14.1.0",
    "eslint": "9.21.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-import-resolver-typescript": "3.7.0",
    "eslint-plugin-chai-friendly": "1.0.1",
    "eslint-plugin-cypress": "4.1.0",
